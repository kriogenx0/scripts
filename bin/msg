#!/bin/bash
#!/usr/bin/env sh

tput sgr0
if [[ -n $2 ]]; then
  color='0'
  message=$1
  shift
  for a in "$@"; do
    #echo $a
    case "$a" in
      k|black)
        color=30 ;;
      r|red)
        color=31 ;;
      g|green)
        color=32 ;;
      y|yellow)
        color=33 ;;
      b|blue)
        color=34 ;;
      m|magenta)
        color=35 ;;
      c|cyan)
        color=36 ;;
      w|white)
        color=37 ;;
      k-bg|black-background)
        color=40 ;;
      r-bg|red-background)
        color=41 ;;
      g-bg|green-background)
        color=42 ;;
      y-bg|yellow-background)
        color=43 ;;
      b-bg|blue-background)
        color=44 ;;
      m-bg|magenta-background)
        color=45 ;;
      c-bg|cyan-background)
        color=46 ;;
      w-bg|white-background)
        color=47 ;;
      o|bold)
        bold=1 ;;
      u|underline)
        underline=1 ;;
      i|invert|reverse)
        invert=1 ;;
    esac
  done
  str="\033[""$color"
  [[ -n $bold ]] && str+=";1"
  [[ -n $underline ]] && str+=$str";4"
  [[ -n $invert ]] && str+=$str";7"
  str+="m"
  echo -e "$str""$message"
else
  echo $1
fi
tput sgr0
