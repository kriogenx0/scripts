#!/bin/bash

# copter
copter() {

  usage() {
    echo "######## Copter ########"
    echo "Apache - a, apache"
    echo "  s, start          Start Apache"
    echo "  f, finish         Stop Apache"
    echo "  r, rebuild        Rebuilding Apache sites"
    echo "  l, log            Apache log or progress"
    echo "MySQL - m, mysql"
    echo "  s, start          Start MySQL"
    echo "  f, finish         Stop MySQL"
  }

  A_SITES=(~/Sites/*)
  #params=($1 $2)
  ns=$1
  #while true
  #do
    case "$ns" in
      r|rebuild)
        echo 'Rebuilding'
        action='r'
      ;;
    esac
  #done # while

  if [[ $1 == 'apache' || $1 == 'a' ]]; then
    if [[ $2 == 'l' || $2 == 'log' ]]; then
      echo `ps ax | grep /usr/sbin/httpd | grep -v grep | cut -c1-5 | paste -s -`
    fi
  fi

  usage
}
