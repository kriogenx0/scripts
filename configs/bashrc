# copy sync
cps() {
  rnc --exclude ".svn" --exclude ".git" "${1%.*}"/ "$2"
}
# move sync
mvs() {
  rnc --remove-source-files "${1%.*}"/ "$2"
}
# copy mirror
cpmirror() {
  rnc --delete "${1%.*}"/ "$2"
}

