# tar compress
tarc() {
  a=${1%.*}'.tar.gz'
  /usr/bin/tar cvf $a $1 ;
}

# rsync
alias rnc='rsync -avu --stats --progress --exclude ".svn" --exclude ".git" --exclude ".DS_Store"'
# copy sync
cps() {
  rnc -z "${1%.*}"/ "$2"
}
# move sync
mvs() {
  rnc --remove-source-files "${1%.*}"/ "$2"
}
rncmirror() {
  rnc -z --delete "${1%.*}"/ "$2"
}

# Web Server
