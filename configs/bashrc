# Processes
psa() {
  if [[ -z $1 ]]; then
    ps aux
  else
    ps aux | grep $1 | grep -v grep
  fi
}
killps() {
  PROCESSES=`psa $1 | awk '{print $2}'`
  [[ -n $PROCESSES ]] && kill -9 $PROCESSES
}

# tar compress
tarc() {
  a=${1%.*}'.tar.gz'
  /usr/bin/tar cvf $a $1 ;
}

# rsync
